# -------------------------------
# Core Dart / Flutter
# -------------------------------
.dart_tool/
.packages
.flutter-plugins
.flutter-plugins-dependencies
.melos_tool/          # if you use melos (state lives in .dart_tool too)
build/
**/build/
coverage/             # keep lcov.info if you need, see below
# Uncomment to keep coverage report artifact:
# !coverage/lcov.info

# Generated by Flutter tooling
**/.generated/
**/.last_build_id
# Flutter export env scripts
ios/Flutter/flutter_export_environment.sh
macos/Flutter/flutter_export_environment.sh

# -------------------------------
# Platform: Android
# -------------------------------
android/.gradle/
android/.cxx/
android/local.properties
**/captures/
**/*.keystore
**/*.jks
android/key.properties
# Crashlytics build cache
android/app/crashlytics-build.properties

# -------------------------------
# Platform: iOS
# -------------------------------
# CocoaPods (the lockfile SHOULD be committed)
ios/Pods/
ios/.symlinks/
ios/Flutter/.last_build_id
# Xcode user data & derived data
**/*.xcuserdatad/
**/*.xccheckout
**/*.moved-aside
**/*.xcscmblueprint
**/DerivedData/
# Swift Package Manager workspace data
**/.swiftpm/xcode/package.xcworkspace/xcuserdata/

# -------------------------------
# Platform: macOS
# -------------------------------
macos/Pods/
macos/Flutter/ephemeral/
macos/Flutter/GeneratedPluginRegistrant.swift # generated; usually committed by Flutterâ€”ignore if regenerating in CI
# (If you prefer to commit GeneratedPluginRegistrant.swift, comment the line above)

# -------------------------------
# Platform: Windows
# -------------------------------
windows/Runner/Debug/
windows/Runner/Release/
windows/Runner/*/generated/
# CMake build dirs (if you build out-of-tree, ignore your chosen build dir)
# cmake-build-*/

# -------------------------------
# Platform: Linux
# -------------------------------
linux/*/generated/
# Same note as Windows re: CMake build directories

# -------------------------------
# Platform: Web
# -------------------------------
# Build output already ignored by build/
.terraform/           # if using infra locally for web hosting, optional

# -------------------------------
# IDEs / Editors
# -------------------------------
# IntelliJ / Android Studio
*.iml
.idea/
# VS Code (keep recommended project files if you use them)
.vscode/
# If you want to keep icons/settings/extensions recommendations, use:
# .vscode/*
# !.vscode/extensions.json
# !.vscode/settings.json
# !.vscode/launch.json
# !.vscode/tasks.json

# Xcode
*.xcuserstate
xcuserdata/

# -------------------------------
# FVM (Flutter Version Manager)
# -------------------------------
.fvm/
# But keep the project config so teammates know which version to use
!.fvm/fvm_config.json
# The Flutter SDK symlink should not be committed
.fvm/flutter_sdk/

# -------------------------------
# Env / Secrets (keep an example)
# -------------------------------
.env
.env.*
!.env.example

# -------------------------------
# Misc OS / tooling
# -------------------------------
.DS_Store
Thumbs.db
*.log

